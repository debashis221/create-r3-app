{
  "name": "create-r3",
  "version": "1.0.0",
  "description": "CLI for creating next.js apps boilerplate",
  "main": "index.js",
  "scripts": {
    "precommit": "lint-staged",
    "format": "prettier --trailing-comma es5 --single-quote --write 'bin/**/*.js'",
    "pub": "npm version patch && npm publish"
  },
  "lint-staged": {
    "*.js": [
      "prettier --trailing-comma es5 --single-quote --write",
      "git add"
    ]
  },
  "bin": {
    "create-r3": "./bin/index.js"
  },
  "keywords": [
    "nextjs",
    "boilerplate",
    "stater-kit",
    "cli",
    "redux",
    "reactjs",
    "flux",
    "styled-components"
  ],
  "license": "MIT",
  "engines": {
    "node": ">=6"
  },
  "dependencies": {
    "chalk": "^2.0.1",
    "commander": "^2.10.0",
    "fs-extra": "^4.0.0",
    "plop": "^1.8.1",
    "semver": "^5.3.0"
  },
  "devDependencies": {
    "husky": "^0.14.3",
    "lint-staged": "^4.2.2",
    "prettier": "^1.6.1"
  },
  "npmName": "create-r3"
}
